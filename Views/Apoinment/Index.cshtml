            <th>
                @Html.DisplayNameFor(model => model.DoctorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApoinmentDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Porpose)
            </th>
