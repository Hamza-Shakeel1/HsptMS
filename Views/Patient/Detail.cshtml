@model HsptMS.Data.Models.Patient

@{
    ViewData["Title"] = "Patient Details";
}

<h2>Patient Details</h2>

<!-- Patient Information -->
<div class="card">
    <div class="card-header">
        <h4>@Model.Name</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Age</dt>
            <dd class="col-sm-9">@Model.Age</dd>

            <dt class="col-sm-3">Gender</dt>
            <dd class="col-sm-9">@Model.Gender</dd>

            <dt class="col-sm-3">Contact Number</dt>
            <dd class="col-sm-9">@Model.ContactNumber</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Address</dt>
            <dd class="col-sm-9">
                @if (Model.Address != null)
                {
                    <p>@Model.Address.Street, @Model.Address.City, @Model.Address.Country</p>
                }
                else
                {
                    <p>No address provided</p>
                }
            </dd>

            <dt class="col-sm-3">Doctor ID</dt>
            <dd class="col-sm-9">@Model.DoctorId</dd>

            <dt class="col-sm-3">Admission Date</dt>
            <dd class="col-sm-9">@Model.AdmissionDate</dd>

            <dt class="col-sm-3">Discharge Date</dt>
            <dd class="col-sm-9">@Model.DischargeDate</dd>
        </dl>

        <!-- Action Buttons -->
        <div class="mt-3">
            <a href="@Url.Action("Edit", new { id = Model.Id })" class="btn btn-warning">Edit</a>
            <a href="@Url.Action("Discharge", new { id = Model.Id })" class="btn btn-primary">Discharge</a>
            <a href="@Url.Action("Delete", new { id = Model.Id })" class="btn btn-danger">Delete</a>
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
